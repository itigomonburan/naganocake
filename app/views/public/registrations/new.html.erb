<div class="container">
  <div class="row justify-content-center mt-2 mb-2">
    <div class="col">
    <h4>　　　　新規会員登録</h4>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  <table class="mx-4 table-sm">
    <tr>
      <td>名前</td>
      <td>(姓)</td>
      <td><%= f.text_field :last_name,placeholder:"令和" %></td>
      <td>(名)</td>
      <td><%= f.text_field :first_name,placeholder:"道子" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>(セイ)</td>
      <td><%= f.text_field :last_name_kana,placeholder:"レイワ" %></td>
      <td>(メイ)</td>
      <td><%= f.text_field :first_name_kana,placeholder:"ミチコ" %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com" %></td>
    </tr>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :post_code,placeholder:"0000000" %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td></td>
      <td colspan="3">
        <%= f.text_field :address, style: "width: 100%;", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </td>
    </tr>
    <tr>
      <td>電話番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :phone_number,placeholder:"0000000000" %></td>
    </tr>
    <tr>
      <td>パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </td>
      <td></td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <td>パスワード(確認用)</td>
      <td></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td><%= f.submit "新規会員登録", class:"btn btn-success" %></td>
    </tr>
  </table>

    <% end %>
      <h4>　　　　既に登録済みの方</h4>
      <div>
        <%= link_to '　　　　　　　こちら', new_customer_session_path %>からログインしてください。
      </div>
    </div>
  </div>
</div>