<div class="container">
  <div class="row justify-content-center mt-2 mb-2">
    <div class="col">
      <h3>会員情報編集</h3>
      <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <table class="mx-4 table-sm">
          <tr>
            <td>名前</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :post_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan="3">
              <%= f.text_field :address, style: "width: 100%;", placeholder: "東京都渋谷区代々木神園町0-0" %>
            </td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "　編集内容を保存　", class:"btn btn-success" %></td>
            <td></td>
            <td><%= link_to "　退会する　", customers_check_path, class:"btn btn-danger" %></td>
          </tr>
        </table>
      <% end %>

    </div>
  </div>
</div>