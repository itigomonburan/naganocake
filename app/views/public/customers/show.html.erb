<div class='container px-5 px-sm-0'>
  <div class='row m-4'>
    <div class='col-mb4'>
      <h3>マイページ</h3>

        <div class="d-flex align-items-center mb-3">
          <h5>登録情報　</h5>
          <%= link_to "　編集する　", customers_edit_path, class:"btn btn-success  ms-2" %>
        </div>

        <table class='table table-bordered'>
          <thead>
          <tr>
            <th>氏名</th>
            <td>
              <%= @customer.last_name %>
              <%= @customer.first_name %>
            </td>
          </tr>
          <tr>
            <th>カナ</th>
            <td>
              <%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          </thead>
        </table>

      <div class="d-flex align-items-center">
        <h4>配送先　</h4>
        <%= link_to "　一覧を見る　", addresses_path, class: "btn btn-primary ms-2" %>
      </div>
      <div class="d-flex align-items-center mt-3">
        <h4>注文履歴　</h4>
        <%= link_to "　一覧を見る　", orders_path, class: "btn btn-primary ms-2" %>
      </div>

    </div>
  </div>
</div>