<h1>ショッピングカート</h1>
<%= #link_to 'カートを空にする', current_customer.cart_items.destroy_all, method: :delete, data: { confirm: '本当に空にしますか？' }, class: "btn btn-sm btn-danger" %>
<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image(20,20) %>
          <%= cart_item.item %>
        </td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
          <% form_with model:cart_item, local: true do |f| %>
            <%= f.select :amount, (1..10) %>
          <%= f.submit '変更', class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %></td>
        <%= link_to '買い物を続ける', admin_items_path, class: "btn btn-primary" %>
        <% @total += cart_item.subtotal %>
      </tr>
    <% end %>
  </tbody>
</table>
