<div class="container">
  <div class="row">
    <div class = "col-2">
      <%= render 'public/items/genre', genre: @genres %>
    </div>

    <div class="col-10 mt-2 mb-2">
      <h3>検索結果（全<%= @items_all %>件）</h3>
      <div class="search-items d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="search-item mr-4">
            <div>
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.image, size: "200x150" %>
              <% end %>
            </div>
            <div><%=  item.name %></div>
            <div>￥<%= item.price.to_s(:delimited) %></div>
              <% if item.is_active == true %>
                <p class="text-success">販売中</p>
              <% else %>
                <p class="text-danger">販売停止中です</p>
              <% end %>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>