<div class="container">
  <div class="row">
    <div class = "col-2">
      <%= render 'public/items/genre', genre: @genres %>
    </div>

    <div class="col-10 mt-2 mb-2">
      <h3>検索結果（全<%= @items_all %>件）</h3><br>
      <div class="search-items d-flex flex-wra">
        <% @records.each do |data| %>
        <div class="search-item mr-4">
          <%= image_tag data.image, size: "200x150" %>
          <div><%= link_to data.name, item_path(data.id) %></div>
          <div>￥<%= data.price.to_s(:delimited) %></div>
            <% if data.is_active == true %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-danger">販売停止中です</p>
           <% end %>
          </div>
        <% end %>
      </div>
      <% if @records.empty? %>
        <p class="text-danger">該当する商品はありません</p>
      <% end %>

      <div class="pagination d-flex justify-content-center">
        <%= paginate @records %>
      </div>
    </div>
  </div>
</div>