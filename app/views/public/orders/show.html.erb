<div class="container mt-5 mb-5">
  <div class="row mt-2 mb-3 offset-1 text-center">
    <h3>注文履歴詳細</h3>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <div class="row">
        <div class="col-8">
          <h5 class="font-weight-bold">注文情報</h5>
          <table class="table table-list">
            <tr>
              <td class="title-background">注文日</td>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <td class="title-background">配送先</td>
              <td style="width: 80%;">
                〒<%= @order.post_code %></br>
                <%= @order.address %></br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <td class="title-background">支払方法</td>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <td class="title-background">ステータス</td>
              <td><%= @order.status_i18n %></td>
            </tr>
          </table>
        </div>
        <div class="col-4">
          <h5 class="font-weight-bold">請求情報</h5>
          <table class="table table-list">
            <tr>
              <td class="title-background">商品合計</td>
              <td><%= @order.price.to_s(:delimited) %></td>
            </tr>
            <tr>
              <td class="title-background">配送料</td>
              <td><%= @order.shipping_cost %></td>
            </tr>
            <tr>
              <td class="title-background">ご請求額</td>
              <td><%= @order.amount_billed.to_s(:delimited)%></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-10">
          <h5 class="font-weight-bold">注文内容</h5>
          <table class="table table-list">
            <tr class="title-background">
              <td>商品</td>
              <td>単価(税込)</td>
              <td>個数</td>
              <td>小計</td>
            </tr>
            <% @order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= order_detail.price.to_s(:delimited)%></td>
                <td><%= order_detail.amount %></td>
                <td><%= order_detail.subtotal.to_s(:delimited) %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>