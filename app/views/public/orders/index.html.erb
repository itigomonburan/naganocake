<div class="container px-sm-0">
  <br>
  <div class="row mt-2 mb-3 offset-1">
    <h3>注文履歴一覧</h3>
  </div>
  <div class="row">

      <table class="table table-list table-bordered">
        <thead>
          <tr class="title-background">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %>
              <td style="width: 35%">
                〒<%= order.post_code %></br>
                <%= order.address %></br>
                <%= order.name %>
              </td>
            </td>
            <td>
              <ul class="p-0" style="list-style: none;">
                <% order.items.each do |item| %>
                  <li class="m-0"><%= item.name %></li>
                <% end %>
              </ul>
            </td>
            <td><%= order.price.to_s(:delimited) %>円</td>
            <td><%= order.status_i18n %></td>
            <td>
              <%= link_to '表示する', order_path(order), class:"btn btn-info" %>
            </td>
          </tr>
        <% end %>
      </table>
      <div class = "mx-auto">
        <%= paginate @orders %>
      </div>
  </div>
</div>