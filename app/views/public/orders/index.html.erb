<div class="container mt-5 mb-5">
  <div class="row mt-2 mb-3 offset-1">
    <h3>注文履歴一覧</h3>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-list">
        <tr class="title-background">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
            <th style="width: 35%">
              〒<%= order.post_code %></br>
              <%= order.address %></br>
              <%= order.name %>
            </th>
            <th>
              <ul class="p-0" style="list-style: none;">
                <% order.items.each do |item| %>
                  <li class="m-0"><%= item.name %></li>
                <% end %>
              </ul>
            </th>
            <th><%= order.price.to_s(:delimited) %>円</th>
            <th><%= order.status_i18n %></th>
            <th>
              <%= link_to '表示する', order_path(order), class:"btn btn-info" %>
            </th>
          </tr>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>