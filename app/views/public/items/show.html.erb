<div class="container takasa">
  <div class="row row-new">

  <h2>商品詳細</h2><br>


  <%= image_tag @item.get_image(100,100) %>


<table>
         <td>商品名</td>
         <td><%= @item.name %></td>
         <th>税抜価格</th>
         <td><%= @item.price.to_s(:delimited) %>円</td>
         <th>ジャンル</th>
         <td><%= @item.genre.name %></td>
         <th>ステータス</th>
         <td><%= @item.is_active ? '販売中' : '販売停止中' %></td>
</table>




  </div>
</div>