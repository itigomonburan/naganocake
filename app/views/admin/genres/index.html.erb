<div class="container my-3">
  <div>
    <h2>ジャンル一覧・追加</h2>
  </div>
  <div>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      ジャンル名<%= f.text_field :name,placeholder:"ジャンル名", class: "m-5" %>
      <%= f.submit '新規登録', class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-5">
      <table class="table table-sm">
        <thead class="thead-light">
          <th>　　　　ジャンル</th>
          <th></th>
        </thead>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
        </tr>
        <% end %>
      </table>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @genres %>
  </div>
</div>