<h1>注文履歴一覧</h1>
<% if admin_signed_in? %>
  <li>
    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
  </li>
<% else %>
  <li>
    <%= link_to "ログイン", new_admin_session_path %>
  </li>
<% end %>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"),order %></td>
        <td>
          <%= order.customer.last_name %>
          <%= order.customer.first_name %>
        </td>
        <td><%= order.order_detail.sum(:amount) %></td>
        <td><%= order.status_i18n %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>