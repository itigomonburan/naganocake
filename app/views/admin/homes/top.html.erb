<h1>管理者トップ</h1>
<% if admin_signed_in? %>
  <li>
    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
  </li>
<% else %>
  <li>
    <%= link_to "ログイン", new_admin_session_path %>
  </li>
<% end %>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name,item %></td>
        <td><%= item.price %></td>
        <td><%= item.genre_id.name %></td>
        <td><%= item.is_active %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>