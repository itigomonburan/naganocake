<div class="container">
  <div class="row">
    <div class="col">
      <h2>管理者ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="mx-auto table-sm">
          <tr>
            <td class="w-25">メールアドレス</td>
            <td><%= f.email_field :email, :size=>"50", autofocus: true, autocomplete: "email",placeholder:"sample@example.com" %></td>
          </tr>
          <tr>
            <td>パスワード</td>
            <td><%= f.password_field :password, :size=>"50", autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "　ログイン　", class:"btn btn-primary" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>