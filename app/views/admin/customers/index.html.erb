<div class="container">
  <div class="row">
    <div class="col">

      <h2>会員一覧</h2>
      <table class="table table-sm">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tr>
        <% @customers.each do |customer| %>
          <td><%= customer.id %></td>
          <td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td><%= customer.customer_status %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>