<div class="container takasa">
  <div class="row row-new">


    <h2>商品新規登録</h2><br>

  <div class="row justify-content-center">
  <%= form_with(model: [ :admin, @item ]) do |f| %>
    <table class="table table-borderless">
      <tr>
        <td><%= f.label :商品画像 %></td>
        <td><%= f.file_field :image, accept: "image/*", class: "form-control-file" %></td>
        <td></td>
      </tr>

      <tr>
        <td><%= f.label :商品名 %></td>
        <td><%= f.text_field :name, placeholder: "商品名", class: "form-control" %></td>
        <td></td>
      </tr>








  <% end %>