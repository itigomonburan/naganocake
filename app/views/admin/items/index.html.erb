<div class="container">
  <div class="row">

    <h2>商品一覧</h2><br>

    <table class="table">
     <thead>
         <th>商品ID</th>
         <th>商品名</th>
         <th>税抜価格</th>
         <th>ジャンル</th>
         <th>ステータス</th>
     </thead>
     <tbody>
      <% @items.each do |item| %>
        <tr></tr>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
        </tr>
      <% end %>
     </tbody>
    </table>

  </div>
</div>