<div class="container">
  <div class="row">

  <h3>商品詳細</h3><br>
  <br>
  <br>
  <br>
  <div class = "container-fluid" >
    <div class="row mx-auto">
         <div class = col-5>
              <%= image_tag @item.get_image(350,280) %>
         </div>

        <div class="col-6 offset-1">
         <table class="table table-borderless">
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.description %></td>
          </tr>
          <tr>
            <td>商品価格<br>（税抜価格）</td>
            <td><%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
            <br>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @item.is_active ? '販売中' : '販売停止中' %></td>
          </tr>
         </table>


          <div class="text-center">
            <%= link_to '編集する', edit_admin_item_path(@item), class: "button btn btn-success center-block" %>
          </div>

        </div>

    </div>
  </div>
  </div>
</div>