<div class="container">
  <div class="row">

  <h3>商品詳細</h3><br>
  <br>
  <br>
  <br>

  <div class = "container-fluid" >
    <div class="row mx-auto">
         <div class = col-5>
              <%= image_tag @item.get_image(350,280) %>
         </div>

         <div class="col-6 offset-1">
         <table class="table table-borderless">

           <div>商品名<%= @item.name %></div>
           <br>
           <div>商品説明<%= @item.description %></div>
           <br>
           <div>商品価格<%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</div>
           <br>
           <div>ジャンル<%= @item.genre.name %></div>
           <br>
           <div>ステータス<%= @item.is_active ? '販売中' : '販売停止中' %></div>
           <br>
           <div><%= link_to '編集する', edit_admin_item_path(@item), class: "button btn btn-success center-block" %></div>
          </table>
          </div>
    </div>
  </div>
  </div>
</div>