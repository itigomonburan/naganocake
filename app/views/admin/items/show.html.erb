<div class="container">
  <div class="row">

  <h2>商品詳細</h2><br>
 <br>
 <br>
 <br>
 <br>
      <div class = "container .mt-md-5" >
              <%= image_tag @item.get_image(300,300) %>

           <div>商品名　　　　　<%= @item.name %></div>
           <br>
           <div>商品説明　　　　<%= @item.description %></div>
           <br>
           <div>商品価格　　　　<%= @item.price.to_s(:delimited) %>円</div>
           <br>
           <div>ジャンル　　　　<%= @item.genre.name %></div>
           <br>
           <div>ステータス　　　<%= @item.is_active ? '販売中' : '販売停止中' %></div>

        </div>
      </div>

         <div class="actions text-center">
          <%= link_to '編集する', edit_admin_item_path(@item), class: "button btn btn-success center-block" %>
         </div>

  </div>
</div>