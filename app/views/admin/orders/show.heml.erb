<div class = "container">
  <div class = "row">
    <div>
      <h2>注文履歴詳細</h2>
    </div>
    <table>
      <tr>
        <td>購入者</td>
        <td><%= link_to @order.customer.name @order.customer_path %></td>
      </tr>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= @order.name %></td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <td>注文ステータス</td>
        <td><%= form_with model:order, rocal: true do |f| %>
              <%= f.select :status,Order.status_i18[:payment_waiting, :payment_confirmation, :in_production, :preparing_delivery, :delivered] %>
              <%= f.submit '更新', class: "btn btn-success" %>
            <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-7">
      <table class="table table-sm">
        <thead class="thead-light">
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </thead>
        <% @order.each do |order| %>
        <tr>
          <td><%= order.items.name %></td>
          <td><%= order.items.with_tax_price.to_s(:delimited) %></td>
          <td><%= order.items.count %></td>
          <td><%= order.items.subtotal.to_s(:delimited) %></td>
          <th>
            <%= form_with model:order, rocal: true do |f| %>
              <%= f.select :making_status,OrderDetails.making_status_i18[:start_not_posssible, :production_pending, :in_production, :production_complete] %>
              <%= f.submit '更新', class: "btn btn-success" %>
            <% end %>
          </th>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-4">
      <table>
        <tr>
          <td>商品合計</td>
          <td><%= @order.amount_billed  %></td>
        </tr>
        <tr>
          <td>送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td><%= @order.amount_billed.to_s(:delimited)%></td>
        </tr>
      </table>
    </div>
  </div>
</div>